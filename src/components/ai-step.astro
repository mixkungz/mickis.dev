---
interface Props {
  number: number;
  title: string;
  description: string;
  icon: string;
  isLast?: boolean;
}

const { number, title, description, icon, isLast = false } = Astro.props;
---

<div class="flex flex-col items-center text-center">
  <!-- Step Circle -->
  <div class="relative flex items-center justify-center">
    <div class="absolute inset-0 rounded-full bg-gradient-to-r from-teal-500/20 to-emerald-500/20 blur-md"></div>
    <div class="relative flex h-20 w-20 items-center justify-center rounded-full border-2 border-teal-500/40 bg-gradient-to-br from-teal-500/10 to-emerald-500/10 backdrop-blur-sm transition-all duration-300 hover:border-teal-500/60 hover:shadow-lg hover:shadow-teal-500/20">
      <span class="text-3xl">{icon}</span>
    </div>
    <div class="absolute -right-1 -top-1 flex h-7 w-7 items-center justify-center rounded-full bg-gradient-to-br from-teal-500 to-emerald-500 text-sm font-bold text-white">
      {number}
    </div>
  </div>

  <!-- Content -->
  <div class="mt-6">
    <h3 class="text-xl font-bold text-foreground">{title}</h3>
    <p class="mt-2 text-sm text-muted-foreground">{description}</p>
  </div>
</div>
