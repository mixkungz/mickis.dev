---
import SkillCard from "./skill-card.astro";
import MaturityScale from "./maturity-scale.astro";

const backendIcon = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>`;

const frontendIcon = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>`;

const devopsIcon = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"/>`;

const productIcon = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h6m-6 8l-4-4V4a2 2 0 012-2h14a2 2 0 012 2v10a2 2 0 01-2 2H9l-2 2z"/>`;

const mobileIcon = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>`;

const designIcon = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>`;
---

<section id="competency" class="relative bg-muted/5 py-12">
  <div
    class="pointer-events-none absolute inset-0 -z-10 opacity-20 bg-dots-subtle"
  >
  </div>
  <div class="mx-auto w-full max-w-7xl px-6 lg:px-8">
    <header class="mb-10 border-b border-border pb-8">
      <h2 class="text-3xl font-bold tracking-tight text-foreground">
        Skills & Experience
      </h2>
      <p class="mt-3 text-muted-foreground">
        A breakdown of my technical expertise and proficiency levels across
        different domains, backed by real-world production experience.
      </p>
    </header>

    <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
      <SkillCard
        title="Backend"
        description="Building scalable backend systems, automate testing, database optimization, and CI/CD infrastructure."
        proficiencyLevel={3}
        proficiencyText="Production-Ready"
        skills={[
          "Node.js",
          "Spring Boot",
          "Django",
          "ASP.NET Core",
          "REST APIs",
          "Oracle PL/SQL",
          "Microservices",
          "Cryptography",
        ]}
        achievements={[
          "Established foundational backend infrastructure with containerized services, transitioning from legacy WinForms-only environment.",
          "Engineered high-quality features with 95% test coverage for a global customer base across continent.",
          "Designed banking APIs enabling 30% expansion of partner network and integrating 10+ third-party services.",
        ]}
        icon={backendIcon}
        size="large"
        orderClasses="order-2 md:order-1"
      />

      <MaturityScale />

      <SkillCard
        title="Infra / DevOps"
        proficiencyLevel={2}
        proficiencyText="Feature Delivery"
        skills={["Docker", "AWS", "GitLab CI", "Jenkins", "Azure"]}
        icon={devopsIcon}
        size="small"
        orderClasses="order-4 md:order-3"
      />

      <SkillCard
        title="Frontend"
        description="Building responsive, maintainable web applications with React and Next.js."
        proficiencyLevel={3}
        proficiencyText="Production-Ready"
        skills={[
          "React.js",
          "Next.js",
          "TypeScript",
          "Tailwind CSS",
          "Shadcn/ui",
          "Jest",
          "Cypress",
        ]}
        achievements={[
          "Led team upgrade of Next.js v9 → v12, enabling new features and improving developer experience.",
          "Designed and built the company’s first modern web application stack — Next.js, shadcn/ui, and Tailwind CSS — providing a scalable dashboard solution that reduces reliance on the legacy C# WinForms application.",
          "Collaborated in the design and rollout of the dashboard and survey feature, positively impacting user engagement.",
        ]}
        icon={frontendIcon}
        size="large"
        orderClasses="order-3 md:order-4"
      />

      <SkillCard
        title="Product & Communication"
        proficiencyLevel={2}
        proficiencyText="Feature Delivery"
        skills={[
          "Agile / Scrum",
          "Cross-team Coordination",
          "Product Alignment",
          "Sprint Planning",
        ]}
        icon={productIcon}
        size="small"
        orderClasses="order-5 md:order-5"
      />

      <SkillCard
        title="Mobile Development"
        proficiencyLevel={1}
        proficiencyText="Learning / Assisted"
        skills={["React Native", "Flutter"]}
        icon={mobileIcon}
        size="small"
        orderClasses="order-6 md:order-6"
      />

      <SkillCard
        title="UX / UI Design"
        proficiencyLevel={1}
        proficiencyText="Learning / Assisted"
        skills={["Figma", "Wireframing", "Design Collaboration"]}
        icon={designIcon}
        size="small"
        orderClasses="order-7 md:order-7"
      />
    </div>
  </div>
</section>
